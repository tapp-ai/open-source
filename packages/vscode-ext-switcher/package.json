{
  "name": "vscode-ext-switcher",
  "displayName": "File Extension Switcher",
  "description": "Switch between companion files in Visual Studio Code",
  "version": "0.0.1-alpha.2",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.100.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "package": "vsce package --no-dependencies",
    "build": "bun run compile && bun run package",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.4.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {},
  "contributes": {
    "commands": [
      {
        "command": "extensionSwitcher.switchFile",
        "title": "Switch Between Companion Files"
      }
    ],
    "configuration": {
      "title": "File Extension Switcher",
      "properties": {
        "extensionSwitcher.presets": {
          "type": "array",
          "markdownDescription": "Presets for companion file switching. Each preset configures which file extensions are paired, fallback naming, and creation rules.",
          "default": [
            {
              "sourceExtensions": [".tsx", ".jsx", ".ts", ".js"],
              "targetExtensions": [".module.scss", ".css", ".scss", ".sass", ".less"],
              "sourceDefaultName": "index",
              "targetDefaultName": "${dir}",
              "createSourceExtension": ".tsx",
              "createTargetExtension": ".module.scss",
              "enableBidirectionalSwitch": true
            }
          ],
          "items": {
            "type": "object",
            "required": [
              "sourceExtensions",
              "targetExtensions",
              "sourceDefaultName",
              "targetDefaultName",
              "createSourceExtension",
              "createTargetExtension"
            ],
            "properties": {
              "sourceExtensions": {
                "type": "array",
                "description": "Source file extensions (e.g. [\".tsx\", \".jsx\", \".ts\", \".js\"]).",
                "items": {
                  "type": "string"
                }
              },
              "targetExtensions": {
                "type": "array",
                "description": "Companion file extensions (e.g. [\".module.scss\", \".css\", \".scss\"]).",
                "items": {
                  "type": "string"
                }
              },
              "sourceDefaultName": {
                "type": "string",
                "description": "Default source file name for fallback matching (e.g. \"index\"). Use \"${dir}\" for directory name."
              },
              "targetDefaultName": {
                "type": "string",
                "description": "Default target file name for fallback matching (e.g. \"${dir}\"). Use \"${dir}\" for directory name."
              },
              "createSourceExtension": {
                "type": "string",
                "description": "Extension to use when creating a new source file (e.g. \".tsx\")."
              },
              "createTargetExtension": {
                "type": "string",
                "description": "Extension to use when creating a new companion file (e.g. \".module.scss\")."
              },
              "enableBidirectionalSwitch": {
                "type": "boolean",
                "default": true,
                "description": "Allow switching from target back to source files."
              }
            }
          }
        },
        "extensionSwitcher.useOtherColumn": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, open the companion file in another editor column."
        },
        "extensionSwitcher.allowFileCreation": {
          "type": "boolean",
          "default": true,
          "description": "If enabled, prompt to create a new companion file when none is found."
        }
      }
    }
  },
  "keywords": [
    "vscode",
    "extension"
  ],
  "categories": [
    "Other"
  ],
  "bugs": "https://github.com/tapp-ai/open-source/issues",
  "license": "MIT",
  "author": "Levi Kline (https://github.com/levikline/)",
  "publisher": "Conversion",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tapp-ai/open-source.git",
    "directory": "packages/vscode-ext-switcher"
  }
}
